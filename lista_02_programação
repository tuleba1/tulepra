        "if n3 > n2:\n",
        "  if n2 > n1:\n",
        "    print(f'A ordem decrescente é {n1 , n2 , n3}')\n",
        "if n1 > n3:\n",
        "  if n3 > n2:\n",
        "    print(f'A ordem decrescente é {n2 , n3 , n1}')\n",
